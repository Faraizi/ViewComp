<h3 class="h3 text-center mb-4">Edit Product</h3>
<div class="row row-cols-md-1 row-cols-md-2">
    <div class="col-md">
        <img id="editProductPhoto" src="@Model.ImageUrl" class="img-thumbnail" alt="@Model.CustName" style="height:230px;" />
        <input type="file" class="form-control mt-1" id="editProductPhotoFile" name="productImageFile" accept="image/*" />
        <input type="hidden" id="editProductPhotoUrl" name="ImageUrl" value="@Model.ImageUrl" />
    </div>
    <div class="col-md">
        <input type="hidden" id="editProductId" name="CustID" value="@Model.CustID" />
        <input type="hidden" id="editCategoryId" name="AcctID" value="@Model.AcctID" />

        <div class="input-group mb-4">
            <span class="input-group-text">Name</span>
            <input type="text" id="editCustName" class="form-control" name="CustName" value="@Model.CustName" placeholder="Product Name" />
        </div>
        <div class="input-group mb-4">
            <span class="input-group-text">Balance</span>
            <input type="number" id="editProductPrice" class="form-control" name="Balance" value="@Model.Balance" placeholder="0.00" />
        </div>
        <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" id="editIsAvailable" name="IsAvailable" @(Model.IsActive ? "checked" : "") />
            <label class="form-check-label" for="editIsAvailable">
                Is Active?
            </label>
        </div>
        <div class="input-group mb-4">
            <label class="input-group-text" for="editModelSelect">Model</label>
            <select class="form-select" id="editModelSelect" name="ModelId">
                <option disabled>Choose...</option>
                @foreach (var item in ViewBag.Models)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>
        <div class="input-group mb-4">
            <span class="input-group-text">Date Added</span>
            <input type="date" id="editProductDate" class="form-control" name="AddDate" value="@Model.DOB.ToString("yyyy-MM-dd")" />
        </div>
    </div>
</div>
<div class="d-flex justify-content-between">
    <button type="button" class="btn btn-primary col-md-5" id="updateProductBtn">Update Product</button>
    <button type="button" class="btn btn-secondary col-md-5" onclick="cancelEdit()">Cancel</button>
</div>
